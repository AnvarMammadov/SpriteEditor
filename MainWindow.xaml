<Window x:Class="SpriteEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResize"
        Title="Sprite Editor Pro" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Brush.Bg.Deep}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- DÜZƏLİŞ EDİLDİ: Button Style -->
        <!-- Padding və Alignment oynatmaları ləğv edildi. Layout Grid daxilində idarə olunacaq. -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource Style.Button.Nav}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <!-- Grid tam yayılsın -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <!-- Padding sıfırlandı -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource Self}}" Value="False">
                    <Setter Property="ToolTipService.IsEnabled" Value="True"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="ToolTipService.IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TITLE BAR -->
        <Border Grid.Row="0" Background="{StaticResource Brush.Bg.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,0,1" MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Hamburger -->
                <Button Grid.Column="0" Command="{Binding ToggleMenuCommand}"
                        Style="{StaticResource TitleBarButtonStyle}" Width="50">
                    <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                          Stretch="Uniform" Width="16" Height="16"/>
                </Button>

                <!-- Title + Icon (title bar) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Path Data="{StaticResource Icon.Bone}" Fill="{StaticResource Brush.Accent.Primary}" Width="18" Height="18" Stretch="Uniform"/>
                    <!--<TextBlock Text="SPRITE EDITOR" Foreground="{StaticResource Brush.Text.Primary}" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="14"/>-->
                </StackPanel>

                <!-- Right controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Button x:Name="BtnSettings" Width="46" Height="40" Style="{StaticResource TitleBarButtonStyle}" Click="BtnSettings_Click" ToolTip="{DynamicResource Str_Settings}">
                        <Path Data="{StaticResource Icon.Settings}" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" Width="16" Height="16" Stretch="Uniform"/>
                        <Button.ContextMenu>
                            <ContextMenu Placement="Bottom" HorizontalOffset="-100">
                                <MenuItem Header="{DynamicResource Str_Language}" IsEnabled="False" FontWeight="Bold" Opacity="0.5"/>
                                <Separator Background="{StaticResource Brush.Border}" Margin="0,5"/>
                                <MenuItem Header="English" Click="Language_Click" Tag="en-US"/>
                                <MenuItem Header="Azərbaycan" Click="Language_Click" Tag="az-AZ"/>
                                <MenuItem Header="Русский" Click="Language_Click" Tag="ru-RU"/>
                                <MenuItem Header="Türkçe" Click="Language_Click" Tag="tr-TR"/>
                                <MenuItem Header="Español" Click="Language_Click" Tag="es-ES"/>
                                <MenuItem Header="Português" Click="Language_Click" Tag="pt-BR"/>
                                <MenuItem Header="中文 (简体)" Click="Language_Click" Tag="zh-CN"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <Button Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}" ToolTip="Minimize">
                        <Path Data="{StaticResource Icon.Minimize}" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" Width="10" Height="10" Stretch="Uniform"/>
                    </Button>
                    <Button Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}" ToolTip="Maximize">
                        <Path Data="{StaticResource Icon.Maximize}" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" Width="10" Height="10" Stretch="Uniform"/>
                    </Button>
                    <Button Click="Close_Click" Style="{StaticResource TitleBarCloseButtonStyle}" ToolTip="Close">
                        <Path Data="{StaticResource Icon.Close}" Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" StrokeThickness="1.5" Width="10" Height="10" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" x:Name="SidebarBorder"
                    Background="{StaticResource Brush.Bg.Panel}"
                    BorderBrush="{StaticResource Brush.Border}"
                    BorderThickness="0,0,1,0"
                    ClipToBounds="True">

                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Width" Value="240"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMenuExpanded}" Value="False">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="60" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="240" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- LOGO HEADER -->
                    <Grid Grid.Row="0" Height="60">
                        <!-- Logo icon -->
                        <Path Data="{StaticResource Icon.Bone}"
                              Fill="{StaticResource Brush.Accent.Primary}"
                              Stretch="Uniform"
                              VerticalAlignment="Center">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Width" Value="18"/>
                                    <Setter Property="Height" Value="18"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="20,0,0,0"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuExpanded}" Value="False">
                                            <Setter Property="Width" Value="24"/>
                                            <Setter Property="Height" Value="24"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="50,0,0,0"
                                    Visibility="{Binding IsMenuExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{DynamicResource Str_AppTitle}" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                            <TextBlock Text="{DynamicResource Str_AppSubtitle}" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>

                    <!-- MENU BUTTONLARI (Grid Sistemə keçirildi) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,10,0,0">
                        <StackPanel>

                            <!-- HOME -->
                            <Button Command="{Binding GoToHomeCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="{DynamicResource Str_Home}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <!-- Sabit en (İkon üçün) -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Qalan hissə (Text üçün) -->
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Home}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{DynamicResource Str_Home}" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                            <!-- SPRITE SLICER -->
                            <Button Command="{Binding GoToSpriteSlicerCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="{DynamicResource Str_SpriteSlicer}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Grid}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{DynamicResource Str_SpriteSlicer}" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                            <!-- BG ERASER -->
                            <Button Command="{Binding GoToBackgroundEraserCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="{DynamicResource Str_BGEraser}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Eraser}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{DynamicResource Str_BGEraser}" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                            <!-- RIGGING -->
                            <Button Command="{Binding GoToRiggingCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="{DynamicResource Str_Rigging}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Bone}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{DynamicResource Str_Rigging}" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                            <!-- CONVERTER -->
                            <Button Command="{Binding GoToFormatConverterCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="{DynamicResource Str_Converter}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Convert}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{DynamicResource Str_Converter}" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                            <!-- FRAME ANIMATOR -->
                            <Button Command="{Binding GoToFrameAnimatorCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="{DynamicResource Str_FrameAnimator}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Film}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{DynamicResource Str_FrameAnimator}" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                            <!-- TEXTURE PACKER -->
                            <Button Command="{Binding GoToTexturePackerCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="{DynamicResource Str_TexturePacker}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Packer}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{DynamicResource Str_TexturePacker}" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                            <!-- STORY EDITOR -->
                            <Button Command="{Binding GoToStoryEditorCommand}" Style="{StaticResource SidebarButtonStyle}" ToolTip="Story Editor">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0" Data="{StaticResource Icon.Edit}" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                          Width="18" Height="18" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="Story Editor" VerticalAlignment="Center"
                                               Visibility="{Binding DataContext.IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Button>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Version text -->
                    <TextBlock Grid.Row="2" Text="{DynamicResource Str_Version}" HorizontalAlignment="Center" Foreground="{StaticResource Brush.Border}" Margin="20"
                               Visibility="{Binding IsMenuExpanded, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- MAIN CONTENT AREA -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="0"/>
        </Grid>
    </Grid>
</Window>