<Window x:Class="SpriteEditor.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Sprite Editor Pro" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{StaticResource Brush.Bg.Deep}"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Blue}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="{StaticResource Brush.Bg.Panel}" 
                    BorderBrush="{StaticResource Brush.Border}" 
                    BorderThickness="0,0,0,1"
                    CornerRadius="8,8,0,0"
                    Padding="20,15">
                <Grid>
                    <TextBlock Text="About" FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource Brush.Text.Primary}"/>
                    <Button Content="âœ•" Width="30" Height="30" 
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{StaticResource Brush.Text.Primary}"
                            FontSize="16"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                <StackPanel>
                    
                    <!-- LOGO -->
                    <Border Width="80" Height="80" 
                            Background="{StaticResource Brush.Bg.Panel}" 
                            BorderBrush="{StaticResource Brush.Accent.Primary}" 
                            BorderThickness="2" 
                            CornerRadius="15" 
                            Margin="0,0,0,15">
                        <Path Data="{StaticResource Icon.Bone}" 
                              Fill="{StaticResource Brush.Accent.Primary}" 
                              Stretch="Uniform" 
                              Margin="20"/>
                    </Border>

                    <!-- APP NAME -->
                    <TextBlock Text="SPRITE EDITOR PRO" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource Brush.Text.Primary}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,5"/>

                    <!-- VERSION -->
                    <TextBlock Text="Version 1.0.0 Beta" 
                               FontSize="13" 
                               Foreground="{StaticResource Brush.Text.Secondary}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <!-- TAGLINE -->
                    <TextBlock Text="Professional 2D Game Development Toolkit" 
                               FontSize="12" 
                               Foreground="{StaticResource Brush.Accent.Blue}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,25"/>

                    <!-- COPYRIGHT -->
                    <Border Background="{StaticResource Brush.Bg.Panel}" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Â© 2025 [Your Company Name]" 
                                       Foreground="{StaticResource Brush.Text.Primary}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="11" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="All Rights Reserved" 
                                       Foreground="{StaticResource Brush.Text.Secondary}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- LICENSE INFO -->
                    <Border Background="{StaticResource Brush.Bg.Input}" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="License Status" 
                                       Foreground="{StaticResource Brush.Text.Secondary}" 
                                       FontSize="11" 
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="LicenseStatusText" 
                                       Text="FREE TRIAL (30 days remaining)" 
                                       Foreground="{StaticResource Brush.Accent.Primary}" 
                                       FontWeight="SemiBold" 
                                       FontSize="12" 
                                       Margin="0,0,0,10"/>
                            <Button Content="Enter License Key..." 
                                    Style="{StaticResource Style.Button.Primary}" 
                                    HorizontalAlignment="Left"
                                    Padding="10,6"
                                    FontSize="11"
                                    Click="EnterLicenseButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- LINKS -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Resources" 
                                   Foreground="{StaticResource Brush.Text.Secondary}" 
                                   FontSize="11" 
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3">
                            <Button Content="ðŸŒ Website" Style="{StaticResource LinkButtonStyle}" Click="Website_Click"/>
                            <TextBlock Text="  â€¢  " Foreground="{StaticResource Brush.Text.Secondary}"/>
                            <Button Content="ðŸ“š Documentation" Style="{StaticResource LinkButtonStyle}" Click="Docs_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3">
                            <Button Content="ðŸ’¬ Discord" Style="{StaticResource LinkButtonStyle}" Click="Discord_Click"/>
                            <TextBlock Text="  â€¢  " Foreground="{StaticResource Brush.Text.Secondary}"/>
                            <Button Content="ðŸ› Report Bug" Style="{StaticResource LinkButtonStyle}" Click="ReportBug_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- TECHNICAL INFO -->
                    <Border Background="{StaticResource Brush.Bg.Panel}" 
                            CornerRadius="6" 
                            Padding="12" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Technical Information" 
                                       Foreground="{StaticResource Brush.Text.Secondary}" 
                                       FontSize="10" 
                                       Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Framework:" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="10" Margin="0,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text=".NET 8.0 (WPF)" Foreground="{StaticResource Brush.Text.Primary}" FontSize="10" Margin="5,2" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Build:" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="10" Margin="0,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BuildNumberText" Text="2025.01.15.001" Foreground="{StaticResource Brush.Text.Primary}" FontSize="10" Margin="5,2" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Platform:" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="10" Margin="0,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PlatformText" Text="Windows x64" Foreground="{StaticResource Brush.Text.Primary}" FontSize="10" Margin="5,2" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="{StaticResource Brush.Bg.Panel}" 
                    BorderBrush="{StaticResource Brush.Border}" 
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,8,8"
                    Padding="20,15">
                <Button Content="Close" 
                        Style="{StaticResource Style.Button.Accent}" 
                        HorizontalAlignment="Right"
                        Padding="25,8"
                        Click="CloseButton_Click"/>
            </Border>
        </Grid>
    </Border>
</Window>

