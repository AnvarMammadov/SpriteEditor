<Window x:Class="SpriteEditor.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner"
        Topmost="True">
    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>



    <Border Background="{StaticResource Brush.Bg.Panel}"
            BorderBrush="{StaticResource Brush.Accent.Primary}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource Brush.Bg.Deep}" CornerRadius="7,7,0,0" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock x:Name="TxtTitle" 
                               Text="Notification" 
                               Foreground="{StaticResource Brush.Text.Primary}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="15,0"/>

                    <Button Click="BtnClose_Click" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,10,0"
                            Style="{StaticResource TitleBarCloseButtonStyle}" 
                            Width="30" Height="30">
                        <Path Data="M0,0 L10,10 M0,10 L10,0" 
                              Stroke="White" StrokeThickness="1.5" 
                              Width="10" Height="10" Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Path x:Name="IconPath" 
                      Data="{StaticResource Icon.Bone}" 
                      Fill="{StaticResource Brush.Accent.Primary}" 
                      Width="32" Height="32" Stretch="Uniform" 
                      VerticalAlignment="Center" Margin="0,0,20,0"/>

                <TextBlock x:Name="TxtMessage" 
                           Grid.Column="1"
                           Text="Burada mesaj olacaq..." 
                           Foreground="{StaticResource Brush.Text.Primary}" 
                           FontSize="14" 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center"/>
            </Grid>

            <StackPanel x:Name="ButtonPanel" 
                        Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,15,15">

                <Button x:Name="BtnYes" Content="{DynamicResource Str_MsgBtnYes}" Click="BtnYes_Click" Style="{StaticResource Style.Button.Accent}" Width="80" Margin="5,0" Visibility="Collapsed"/>
                <Button x:Name="BtnNo" Content="{DynamicResource Str_MsgBtnNo}" Click="BtnNo_Click" Style="{StaticResource Style.Button.Primary}" Width="80" Margin="5,0" Visibility="Collapsed"/>
                <Button x:Name="BtnOk" Content="{DynamicResource Str_MsgBtnOk}" Click="BtnOk_Click" Style="{StaticResource Style.Button.Accent}" Width="80" Margin="5,0" Visibility="Collapsed"/>
                <Button x:Name="BtnCancel" Content="{DynamicResource Str_MsgBtnCancel}" Click="BtnCancel_Click" Style="{StaticResource Style.Button.Primary}" Width="80" Margin="5,0" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>