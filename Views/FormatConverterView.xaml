<UserControl x:Class="SpriteEditor.Views.FormatConverterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:SpriteEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.Bg.Deep}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL - SETTINGS -->
        <Border Grid.Column="0" Background="{StaticResource Brush.Bg.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    
                    <!-- HEADER -->
                    <TextBlock Text="{DynamicResource Str_HeaderConverter}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource Brush.Accent.Primary}" 
                               Margin="0,0,0,20"/>

                    <!-- LOAD IMAGE -->
                    <TextBlock Text="{DynamicResource Str_HeaderInputFile}" 
                               FontSize="11" 
                               Foreground="{StaticResource Brush.Text.Secondary}" 
                               Margin="0,0,0,8"/>
                    
                    <Button Content="{DynamicResource Str_BtnSelectImage}" 
                            Command="{Binding LoadImageCommand}" 
                            Style="{StaticResource Style.Button.Primary}"
                            Margin="0,0,0,15"/>

                    <!-- FORMAT SELECTION -->
                    <TextBlock Text="{DynamicResource Str_LblTargetFormat}" 
                               FontSize="11" 
                               Foreground="{StaticResource Brush.Text.Secondary}" 
                               Margin="0,0,0,8"/>
                    
                    <ComboBox ItemsSource="{Binding AvailableFormats}" 
                              SelectedItem="{Binding SelectedFormat}" 
                              Style="{StaticResource DarkComboBoxStyle}"
                              Margin="0,0,0,20"/>

                    <!-- QUALITY SLIDER (for JPG/WebP/AVIF) -->
                    <Border Visibility="{Binding ShowQualitySlider, Converter={StaticResource BooleanToVisibilityConverter}}" 
                            Background="{StaticResource Brush.Bg.Input}" 
                            Padding="12" 
                            CornerRadius="6" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Quality" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Minimum="1" Maximum="100" Value="{Binding Quality}" TickFrequency="10" IsSnapToTickEnabled="False"/>
                                <TextBlock Grid.Column="1" Text="{Binding Quality}" Width="35" FontSize="13" Foreground="{StaticResource Brush.Accent.Primary}" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- PNG COMPRESSION -->
                    <Border Visibility="{Binding ShowQualitySlider, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                            Background="{StaticResource Brush.Bg.Input}" 
                            Padding="12" 
                            CornerRadius="6" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="PNG Compression" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Minimum="0" Maximum="9" Value="{Binding CompressionLevel}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                <TextBlock Grid.Column="1" Text="{Binding CompressionLevel}" Width="35" FontSize="13" Foreground="{StaticResource Brush.Accent.Primary}" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- RESIZE OPTIONS -->
                    <Expander Header="Resize Options" IsExpanded="False" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,10">
                        <StackPanel Margin="0,10,0,0">
                            <CheckBox Content="Enable Resize" IsChecked="{Binding EnableResize}" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,10"/>
                            
                            <Grid IsEnabled="{Binding EnableResize}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Width" FontSize="10" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBox Text="{Binding ResizeWidth, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Text="×" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,15,0,0"/>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Height" FontSize="10" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBox Text="{Binding ResizeHeight, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            
                            <CheckBox Content="Maintain Aspect Ratio" IsChecked="{Binding MaintainAspectRatio}" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Expander>

                    <!-- ADVANCED OPTIONS -->
                    <Expander Header="Advanced" IsExpanded="False" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,20">
                        <StackPanel Margin="0,10,0,0">
                            <CheckBox Content="Strip Metadata" IsChecked="{Binding StripMetadata}" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,5"/>
                            <CheckBox Content="Optimize for Web" IsChecked="{Binding OptimizeForWeb}" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,5"/>
                        </StackPanel>
                    </Expander>

                    <!-- CONVERT BUTTON -->
                    <Button Content="{DynamicResource Str_BtnConvert}" 
                            Command="{Binding ConvertCommand}" 
                            Style="{StaticResource Style.Button.Accent}"
                            Height="40"
                            FontSize="14"
                            IsEnabled="{Binding IsImageLoaded}"
                            Margin="0,0,0,10"/>

                    <!-- BATCH SECTION -->
                    <Border Background="{StaticResource Brush.Bg.Deep}" 
                            BorderBrush="{StaticResource Brush.Border}" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="12"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="BATCH CONVERSION" FontSize="11" FontWeight="Bold" Foreground="{StaticResource Brush.Accent.Blue}" Margin="0,0,0,10"/>
                            
                            <Button Content="Add Files..." Command="{Binding AddBatchFilesCommand}" Style="{StaticResource Style.Button.Primary}" Margin="0,0,0,5"/>
                            <Button Content="Convert All" Command="{Binding BatchConvertCommand}" Style="{StaticResource Style.Button.Accent}" Margin="0,0,0,5"/>
                            <Button Content="Clear List" Command="{Binding ClearBatchFilesCommand}" Style="{StaticResource Style.Button.Primary}" Margin="0,0,0,10"/>
                            
                            <TextBlock Text="{Binding BatchStatus}" 
                                       FontSize="10" 
                                       Foreground="{StaticResource Brush.Text.Secondary}" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- RESET BUTTON -->
                    <Button Content="Reset to Defaults" 
                            Command="{Binding ResetToDefaultsCommand}" 
                            Style="{StaticResource Style.Button.Primary}"
                            Margin="0,10,0,0"
                            Opacity="0.7"/>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- RIGHT PANEL - PREVIEW -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- INFO BAR -->
            <Border Grid.Row="0" Background="{StaticResource Brush.Bg.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,0,1" Padding="15,10">
                <StackPanel>
                    <TextBlock Text="SOURCE IMAGE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SourceInfo}" FontSize="12" Foreground="{StaticResource Brush.Text.Primary}"/>
                </StackPanel>
            </Border>

            <!-- PREVIEW IMAGE -->
            <Border Grid.Row="1" Background="{StaticResource Brush.Bg.Deep}">
                <Grid>
                    <!-- Checkboard background -->
                    <Rectangle>
                        <Rectangle.Fill>
                            <DrawingBrush Viewport="0,0,20,20" ViewportUnits="Absolute" TileMode="Tile">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="#2A2A2A">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,10,10"/>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="#2A2A2A">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="10,10,10,10"/>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="#1A1A1A">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,10,10,10"/>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="#1A1A1A">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="10,0,10,10"/>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <!-- Image Preview -->
                    <Image Source="{Binding PreviewSource}" Stretch="Uniform" Margin="20"/>

                    <!-- Placeholder Text -->
                    <TextBlock Text="{DynamicResource Str_MsgNoImage}" 
                               FontSize="16" 
                               Foreground="{StaticResource Brush.Text.Secondary}" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding IsImageLoaded, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- PROCESSING OVERLAY -->
        <Border Grid.ColumnSpan="2" 
                Background="#CC000000" 
                Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳ Processing..." 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource Brush.Accent.Primary}" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Please wait..." 
                           FontSize="14" 
                           Foreground="{StaticResource Brush.Text.Secondary}" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
