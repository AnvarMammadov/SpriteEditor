<UserControl x:Class="SpriteEditor.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpriteEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="ToolCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252F3F"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="70"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#374151"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent.Blue}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.Bg.Deep}">
        <Grid>
            <Grid.Background>
                <DrawingBrush Viewport="0,0,40,40" ViewportUnits="Absolute" TileMode="Tile" Opacity="0.05">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing>
                            <GeometryDrawing.Pen>
                                <Pen Brush="White" Thickness="1"/>
                            </GeometryDrawing.Pen>
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <LineGeometry StartPoint="0,0" EndPoint="0,40"/>
                                    <LineGeometry StartPoint="0,0" EndPoint="40,0"/>
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Grid.Background>

            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Border Width="80" Height="80" CornerRadius="20" Background="{StaticResource Brush.Bg.Panel}" 
                            BorderBrush="{StaticResource Brush.Accent.Primary}" BorderThickness="2" 
                            HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Path Data="{StaticResource Icon.Bone}" Fill="{StaticResource Brush.Accent.Primary}" Stretch="Uniform" Margin="20"/>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                    </Border>

                    <TextBlock Text="{DynamicResource Str_AppTitle}" FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource Brush.Text.Primary}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource Str_AppSubtitle}" FontSize="14" 
                               Foreground="{StaticResource Brush.Accent.Blue}" HorizontalAlignment="Center" Opacity="0.8"/>
                </StackPanel>

                <Border Grid.Row="1" 
                        Background="{StaticResource Brush.Bg.Panel}" 
                        CornerRadius="12" 
                        BorderBrush="{StaticResource Brush.Border}" 
                        BorderThickness="1" 
                        Width="700"
                        MaxHeight="400">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,0,1" Padding="20">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Str_Welcome}" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}" FontSize="16"/>
                                <TextBlock Text="{DynamicResource Str_StartPrompt}" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Row="1" Padding="15" VerticalScrollBarVisibility="Auto">
                            <UniformGrid Columns="2">

                                <Border Style="{StaticResource ToolCardStyle}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.GoToSpriteSlicerCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#1A3B82F6" Width="40" Height="40" CornerRadius="8">
                                            <Path Data="{StaticResource Icon.Grid}" Fill="{StaticResource Brush.Accent.Blue}" Width="20" Height="20" Stretch="Uniform"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="Sprite Slicer" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                                            <TextBlock Text="{DynamicResource Str_DescSlicer}" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Style="{StaticResource ToolCardStyle}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.GoToBackgroundEraserCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#1A22C55E" Width="40" Height="40" CornerRadius="8">
                                            <Path Data="{StaticResource Icon.Eraser}" Fill="{StaticResource Brush.Accent.Green}" Width="20" Height="20" Stretch="Uniform"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="BG Eraser" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                                            <TextBlock Text="{DynamicResource Str_DescEraser}" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Style="{StaticResource ToolCardStyle}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.GoToFormatConverterCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#1AF472B6" Width="40" Height="40" CornerRadius="8">
                                            <Path Data="{StaticResource Icon.Convert}" Fill="#F472B6" Width="20" Height="20" Stretch="Uniform"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="Converter" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                                            <TextBlock Text="{DynamicResource Str_DescConverter}" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Style="{StaticResource ToolCardStyle}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.GoToFrameAnimatorCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#1AA78BFA" Width="40" Height="40" CornerRadius="8">
                                            <Path Data="{StaticResource Icon.Film}" Fill="#A78BFA" Width="20" Height="20" Stretch="Uniform"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="Frame Animator" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                                            <TextBlock Text="{DynamicResource Str_DescAnimator}" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Style="{StaticResource ToolCardStyle}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.GoToTexturePackerCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#1AF97316" Width="40" Height="40" CornerRadius="8">
                                            <Path Data="{StaticResource Icon.Packer}" Fill="#F97316" Width="20" Height="20" Stretch="Uniform"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="Texture Packer" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                                            <TextBlock Text="{DynamicResource Str_DescPacker}" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Style="{StaticResource ToolCardStyle}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.GoToStoryEditorCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#1AF43F5E" Width="40" Height="40" CornerRadius="8">
                                            <Path Data="M19,2L14,6.5V17.5L19,13.5V2M6.5,5C4.55,5 2.45,5.4 1,6.5V21.16C1,21.41 1.25,21.66 1.5,21.66C1.6,21.66 1.65,21.59 1.75,21.59C3.1,20.94 5.05,20.5 6.5,20.5C8.45,20.5 10.55,20.9 12,22C13.35,21.15 15.8,20.5 17.5,20.5C19.15,20.5 20.85,20.81 22.25,21.56C22.35,21.61 22.4,21.59 22.5,21.59C22.75,21.59 23,21.34 23,21.09V6.5C22.4,6.05 21.75,5.75 21,5.5V19C19.9,18.65 18.7,18.5 17.5,18.5C15.8,18.5 13.35,19.15 12,20V6.5C10.55,5.4 8.45,5 6.5,5Z" 
                                                  Fill="#F43F5E" Width="20" Height="20" Stretch="Uniform"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="Story Editor" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                                            <TextBlock Text="{DynamicResource Str_DescStory}" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Style="{StaticResource ToolCardStyle}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.GoToSvgToolCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#1A00BCD4" Width="40" Height="40" CornerRadius="8">
                                            <Path Data="M18.5,2.54L15.46,5.58L18.41,8.53L21.45,5.5C21.65,5.3 21.65,5 21.45,4.79L19.21,2.54M17.71,9.24L14.76,6.29L4.45,16.6C4.35,16.7 4.29,16.83 4.29,16.96V19.7H7.03C7.16,19.7 7.29,19.64 7.39,19.54L17.71,9.24M3,21V17L14,6L18,10L7,21H3Z" 
                                                  Fill="#00BCD4" Width="20" Height="20" Stretch="Uniform"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="Vector Lab" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                                            <TextBlock Text="SVG Tools &amp; Path" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                            </UniformGrid>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <TextBlock Text="{DynamicResource Str_Version}" Foreground="{StaticResource Brush.Text.Secondary}" Opacity="0.3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>
        </Grid>
    </Grid>
</UserControl>