<UserControl x:Class="SpriteEditor.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpriteEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Arxa fon rəngi əsas pəncərədən gəlir, amma burada da təyin edə bilərik -->
    <Grid Background="{StaticResource Brush.Bg.Deep}">

        <!-- Arxa fon naxışı (Zəif görünən Grid) üçün daxili Grid -->
        <Grid>
            <Grid.Background>
                <DrawingBrush Viewport="0,0,40,40"
                              ViewportUnits="Absolute"
                              TileMode="Tile"
                              Opacity="0.05">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing>
                            <GeometryDrawing.Pen>
                                <Pen Brush="White" Thickness="1"/>
                            </GeometryDrawing.Pen>
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <LineGeometry StartPoint="0,0" EndPoint="0,40"/>
                                    <LineGeometry StartPoint="0,0" EndPoint="40,0"/>
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Grid.Background>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Böyük Logo / İkon -->
                <Border Width="100"
                        Height="100"
                        CornerRadius="20"
                        Background="{StaticResource Brush.Bg.Panel}"
                        BorderBrush="{StaticResource Brush.Accent.Primary}"
                        BorderThickness="2"
                        Margin="0,0,0,20">
                    <Path Data="{StaticResource Icon.Bone}"
                          Fill="{StaticResource Brush.Accent.Primary}"
                          Stretch="Uniform"
                          Margin="25"/>
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="20"
                                          ShadowDepth="5"
                                          Opacity="0.3"/>
                    </Border.Effect>
                </Border>

                <!-- Başlıq -->
                <TextBlock Text="Sprite Editor" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="{StaticResource Brush.Text.Primary}"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Professional 2D Animation Tool" 
                           FontSize="14" 
                           Foreground="{StaticResource Brush.Accent.Blue}"
                           HorizontalAlignment="Center"
                           Opacity="0.8"
                           Margin="0,5,0,30"/>

                <!-- Təlimat Kartı -->
                <Border Background="{StaticResource Brush.Bg.Panel}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="{StaticResource Brush.Border}"
                        BorderThickness="1"
                        MaxWidth="400">
                    <StackPanel>
                        <TextBlock Text="Xoş Gəlmisiniz!"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Brush.Text.Primary}"
                                   FontSize="16"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Layihənizə başlamaq üçün sol paneldən bir alət seçin:"
                                   Foreground="{StaticResource Brush.Text.Secondary}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Path Data="{StaticResource Icon.Grid}"
                                  Fill="{StaticResource Brush.Accent.Blue}"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                            <TextBlock Text="Sprite Slicer - Spritesheet kəsmək üçün"
                                       Foreground="{StaticResource Brush.Text.Secondary}"
                                       FontSize="12"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Path Data="{StaticResource Icon.Eraser}"
                                  Fill="{StaticResource Brush.Accent.Green}"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                            <TextBlock Text="BG Eraser - Arxa fonu təmizləmək üçün"
                                       Foreground="{StaticResource Brush.Text.Secondary}"
                                       FontSize="12"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Path Data="{StaticResource Icon.Bone}"
                                  Fill="{StaticResource Brush.Accent.Primary}"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                            <TextBlock Text="Rigging - Skelet və animasiya üçün"
                                       Foreground="{StaticResource Brush.Text.Secondary}"
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- Versiya Nömrəsi (Aşağı sağ künc) -->
            <TextBlock Text="v1.0.0"
                       Foreground="{StaticResource Brush.Text.Secondary}"
                       Opacity="0.3"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="20"/>

        </Grid>
    </Grid>
</UserControl>
