<UserControl x:Class="SpriteEditor.Views.SpriteSlicerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpriteEditor.Views"
             xmlns:vm="clr-namespace:SpriteEditor.ViewModels"
             xmlns:converters="clr-namespace:SpriteEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToCursorConverter x:Key="BooleanToCursorConverter"/>
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <Style x:Key="SlicerThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Background" Value="{StaticResource Brush.Accent.Primary}"/>
            <Setter Property="BorderBrush" Value="#111827"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModeRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource Brush.Accent.Primary}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent.Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.Bg.Deep}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource Brush.Bg.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,1,0" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Str_HeaderSlicerTools}" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="12" Margin="0,0,0,15"/>

                    <Button Command="{Binding LoadImageCommand}" Style="{StaticResource Style.Button.Primary}" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Str_BtnLoadImage}"/>
                        </StackPanel>
                    </Button>

                    <Separator Background="{StaticResource Brush.Border}" Margin="0,0,0,20" Opacity="0.3"/>

                    <TextBlock Text="MODE" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="11" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <RadioButton Content="Grid" GroupName="SlicerMode" 
                                     Command="{Binding SetModeCommand}" CommandParameter="{x:Static vm:SpriteSlicerViewModel+SlicerMode.Grid}"
                                     IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.Grid}, Mode=OneWay}"
                                     Style="{StaticResource ModeRadioButtonStyle}"/>

                        <RadioButton Content="Auto" GroupName="SlicerMode" 
                                     Command="{Binding SetModeCommand}" CommandParameter="{x:Static vm:SpriteSlicerViewModel+SlicerMode.AutoDetect}"
                                     IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.AutoDetect}, Mode=OneWay}"
                                     Style="{StaticResource ModeRadioButtonStyle}"/>

                        <RadioButton Content="Pen" GroupName="SlicerMode" 
                                     Command="{Binding SetModeCommand}" CommandParameter="{x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}"
                                     IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}, Mode=OneWay}"
                                     Style="{StaticResource ModeRadioButtonStyle}"/>
                    </StackPanel>

                    <StackPanel Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.Grid}}">
                        <TextBlock Text="{DynamicResource Str_HeaderGridParams}" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="11" Margin="0,0,0,10"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource Str_ColCount}" VerticalAlignment="Center" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Columns, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Str_RowCount}" VerticalAlignment="Center" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Rows, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.AutoDetect}}">
                        <TextBlock Text="{DynamicResource Str_HeaderAutoDetect}" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="11" Margin="0,0,0,10"/>
                        <Button Command="{Binding AutoDetectSpritesCommand}" Style="{StaticResource Style.Button.Primary}" Margin="0,0,0,10">
                            <TextBlock Text="{DynamicResource Str_BtnAutoDetect}"/>
                        </Button>
                    </StackPanel>

                    <StackPanel Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}}">
                        <TextBlock Text="EXTRACTED PARTS" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="11" Margin="0,0,0,10"/>
                        <Border Background="#111827" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="4" Height="200" Margin="0,0,0,10">
                            <ListBox ItemsSource="{Binding ExtractedParts}" SelectedItem="{Binding SelectedPart}" Background="Transparent" BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="🗡️" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" Text="{Binding Name, Mode=TwoWay}" Background="Transparent" BorderThickness="0" Foreground="White" VerticalAlignment="Center"/>
                                            <Button Grid.Column="2" Content="❌" Command="{Binding DataContext.DeleteSelectedPartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Background="Transparent" BorderThickness="0" Foreground="#EF4444" Padding="5,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                        <TextBlock Text="* Left Click: Add Point&#x0a;* Right Click: Finish Shape" FontSize="10" Foreground="{StaticResource Brush.Text.Secondary}" FontStyle="Italic" Margin="0,0,0,10"/>
                    </StackPanel>

                    <Separator Background="{StaticResource Brush.Border}" Margin="0,10,0,20" Opacity="0.3"/>

                    <Button Command="{Binding SliceImageCommand}" Height="40">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource Style.Button.Accent}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentMode}" Value="{x:Static vm:SpriteSlicerViewModel+SlicerMode.Grid}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentMode}" Value="{x:Static vm:SpriteSlicerViewModel+SlicerMode.AutoDetect}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Str_BtnSlice}" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ExportAllPartsCommand}" Style="{StaticResource Style.Button.Success}" Height="40"
                            Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾 EXPORT ALL PARTS" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                    <ProgressBar IsIndeterminate="True" Visibility="{Binding IsSlicing, Converter={StaticResource BooleanToVisibilityConverter}}" Height="4" Margin="0,10,0,0" Foreground="{StaticResource Brush.Accent.Blue}" Background="Transparent" BorderThickness="0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="1" ClipToBounds="True">
            <Grid.Background>
                <DrawingBrush Viewport="0,0,20,20" ViewportUnits="Absolute" TileMode="Tile">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing>
                            <GeometryDrawing.Pen>
                                <Pen Brush="#1F2937" Thickness="1"/>
                            </GeometryDrawing.Pen>
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <LineGeometry StartPoint="0,0" EndPoint="0,20"/>
                                    <LineGeometry StartPoint="0,0" EndPoint="20,0"/>
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Grid.Background>

            <Border Margin="20">
                <Viewbox Stretch="Uniform">
                    <Grid Width="{Binding ImagePixelWidth}" Height="{Binding ImagePixelHeight}">
                        <Image Source="{Binding LoadedImageSource}"/>

                        <ItemsControl ItemsSource="{Binding DetectedRects}" 
                                      Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.AutoDetect}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Rectangle Width="{Binding Width}" Height="{Binding Height}" Stroke="#EF4444" StrokeThickness="2" StrokeDashArray="4 2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Canvas x:Name="SlicerCanvas" SnapsToDevicePixels="True"
                                Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.Grid}}">
                            <Border Canvas.Left="{Binding SlicerX}" Canvas.Top="{Binding SlicerY}" Width="{Binding SlicerWidth}" Height="{Binding SlicerHeight}" BorderBrush="{StaticResource Brush.Accent.Green}" BorderThickness="2" Background="#2222C55E" IsHitTestVisible="False"/>
                            <Thumb x:Name="ThumbMove" Canvas.Left="{Binding SlicerX}" Canvas.Top="{Binding SlicerY}" Width="{Binding SlicerWidth}" Height="{Binding SlicerHeight}" Cursor="SizeAll" Opacity="0" DragDelta="ThumbMove_DragDelta" />
                            <Thumb x:Name="ThumbTopLeft" Cursor="SizeNWSE" Style="{StaticResource SlicerThumbStyle}" DragDelta="ThumbResize_DragDelta"/>
                            <Thumb x:Name="ThumbTopRight" Cursor="SizeNESW" Style="{StaticResource SlicerThumbStyle}" DragDelta="ThumbResize_DragDelta"/>
                            <Thumb x:Name="ThumbBottomRight" Cursor="SizeNWSE" Style="{StaticResource SlicerThumbStyle}" DragDelta="ThumbResize_DragDelta"/>
                        </Canvas>

                        <ItemsControl ItemsSource="{Binding GridLines}"
                                      Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.Grid}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Thumb DragDelta="GridLine_DragDelta" Cursor="{Binding IsVertical, Converter={StaticResource BooleanToCursorConverter}}" Canvas.Left="0" Canvas.Top="0">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Line X1="{Binding X1}" Y1="{Binding Y1}" X2="{Binding X2}" Y2="{Binding Y2}" Stroke="{StaticResource Brush.Accent.Blue}" StrokeThickness="1"/>
                                                    <Line X1="{Binding X1}" Y1="{Binding Y1}" X2="{Binding X2}" Y2="{Binding Y2}" Stroke="Transparent" StrokeThickness="15"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding ExtractedParts}" IsHitTestVisible="False"
                                      Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Polygon Points="{Binding Points}" Stroke="#10B981" StrokeThickness="2" Fill="{Binding FillColor}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Polyline Points="{Binding VisualDrawingPoints}" Stroke="#EF4444" StrokeThickness="2"
                                  Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}}"/>

                        <ItemsControl ItemsSource="{Binding CurrentDrawingPoints}" IsHitTestVisible="False"
                                      Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="6" Height="6" Fill="Yellow" Stroke="Black" StrokeThickness="1">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform X="-3" Y="-3"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Canvas Background="Transparent"
                                MouseLeftButtonDown="OnCanvasMouseDown"
                                MouseRightButtonDown="OnCanvasMouseDown"
                                Visibility="{Binding CurrentMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:SpriteSlicerViewModel+SlicerMode.PolygonPen}}"/>

                    </Grid>
                </Viewbox>
            </Border>
        </Grid>
    </Grid>
</UserControl>