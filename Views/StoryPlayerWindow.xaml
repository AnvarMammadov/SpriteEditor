<Window x:Class="SpriteEditor.Views.StoryPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Story Preview" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        MouseDown="Window_MouseDown"
        >

    <Grid>
        <Image Source="{Binding BackgroundImage}" Stretch="UniformToFill"/>

        <Image Source="{Binding CharacterImage}" Height="450" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,0"/>

        <Grid VerticalAlignment="Bottom" Margin="20,0,20,20" Height="180">
            <Border Background="#DD111827" BorderBrush="{StaticResource Brush.Accent.Blue}" BorderThickness="2" CornerRadius="10">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" HorizontalAlignment="Left" Background="{StaticResource Brush.Accent.Primary}" CornerRadius="4" Padding="10,2" Margin="0,0,0,10">
                        <TextBlock Text="{Binding SpeakerName}" FontWeight="Bold" Foreground="#111827" FontSize="14"/>
                    </Border>

                    <TextBlock Grid.Row="1" Text="{Binding DisplayText}" Foreground="{StaticResource Brush.Text.Primary}" 
                               FontSize="16" TextWrapping="Wrap" LineHeight="24"/>
                </Grid>
            </Border>
        </Grid>

        <ItemsControl ItemsSource="{Binding CurrentChoices}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Text}" 
                            Command="{Binding DataContext.SelectChoiceCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            CommandParameter="{Binding}"
                            Style="{StaticResource Style.Button.Primary}"
                            Height="45" FontSize="14" Background="#CC374151" BorderBrush="{StaticResource Brush.Accent.Primary}"
                            Margin="0,0,0,10"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>