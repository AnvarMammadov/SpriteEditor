<UserControl x:Class="SpriteEditor.Views.SvgToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SpriteEditor.ViewModels"
             xmlns:converters="clr-namespace:SpriteEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolVis"/>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        <Style x:Key="SegmentRadioBase" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="SegmentRadioLeft" TargetType="RadioButton" BasedOn="{StaticResource SegmentRadioBase}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,0,1" CornerRadius="4,0,0,4" UseLayoutRounding="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource Brush.Accent.Blue}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent.Blue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SegmentRadioRight" TargetType="RadioButton" BasedOn="{StaticResource SegmentRadioBase}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="0,4,4,0" UseLayoutRounding="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource Brush.Accent.Blue}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent.Blue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource Brush.Bg.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,0,1" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="M18.5,2.54L15.46,5.58L18.41,8.53L21.45,5.5C21.65,5.3 21.65,5 21.45,4.79L19.21,2.54M17.71,9.24L14.76,6.29L4.45,16.6C4.35,16.7 4.29,16.83 4.29,16.96V19.7H7.03C7.16,19.7 7.29,19.64 7.39,19.54L17.71,9.24M3,21V17L14,6L18,10L7,21H3Z" 
                                  Fill="{StaticResource Brush.Accent.Blue}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Vector Lab" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                        </StackPanel>
                        <TextBlock Text="SVG Editor &amp; Previewer" FontSize="12" Foreground="{StaticResource Brush.Text.Secondary}" Margin="26,4,0,0"/>
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>

                        <TextBlock Text="INPUT (Path Data OR Full SVG)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding RawPathData, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                 FontFamily="Consolas" FontSize="11" 
                                 VerticalScrollBarVisibility="Auto"
                                 Background="{StaticResource Brush.Bg.Input}"
                                 BorderBrush="{StaticResource Brush.Border}"/>

                        <StackPanel Visibility="{Binding IsFullSvgMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <TextBlock Text="APPEARANCE" Style="{StaticResource HeaderStyle}"/>

                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Fill Color" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding FillColor, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <Border Grid.Column="1" Height="32" VerticalAlignment="Bottom" CornerRadius="4" 
                                        BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Background="{StaticResource Brush.Bg.Deep}">
                                    <Rectangle Fill="{Binding FillColor}" Margin="4" RadiusX="2" RadiusY="2"/>
                                </Border>
                            </Grid>

                            <TextBlock Text="Professional Palette" Style="{StaticResource LabelStyle}" Margin="0,0,0,8" Opacity="0.7"/>
                            <ItemsControl ItemsSource="{Binding ColorPalette}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.ApplyFillColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                Width="24" Height="24" Margin="0,0,6,6" 
                                                BorderThickness="0" Cursor="Hand" ToolTip="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="ColorBorder" Background="{Binding}" CornerRadius="4" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1"/>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ColorBorder" Property="BorderBrush" Value="White"/>
                                                            <Setter TargetName="ColorBorder" Property="BorderThickness" Value="2"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Stroke Color" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding StrokeColor, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Width" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding StrokeThickness, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <Border Visibility="{Binding IsFullSvgMode, Converter={StaticResource BoolToVis}}"
                                Background="{StaticResource Brush.Bg.Deep}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" 
                                CornerRadius="6" Padding="15" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="FULL SVG MODE" FontWeight="Bold" Foreground="{StaticResource Brush.Accent.Blue}" Margin="0,0,0,5"/>
                                <TextBlock Text="Colors and styles are defined within the SVG code." TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource Brush.Text.Secondary}"/>
                            </StackPanel>
                        </Border>

                        <Separator Background="{StaticResource Brush.Border}" Margin="0,20"/>

                        <Grid>
                            <TextBlock Text="TRANSFORM" Style="{StaticResource HeaderStyle}" Margin="0,0,0,10"/>
                            <Button Content="Reset" Command="{Binding ResetTransformsCommand}" 
                                    Style="{StaticResource Style.Button.Primary}"
                                    HorizontalAlignment="Right" VerticalAlignment="Top" 
                                    Padding="8,2" Height="24" FontSize="10"/>
                        </Grid>

                        <TextBlock Text="Scale" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBox Text="{Binding ScaleX, StringFormat=N2}" Margin="0,0,0,4" Background="{StaticResource Brush.Bg.Input}" BorderThickness="0" TextAlignment="Center"/>
                                <Slider Minimum="0.1" Maximum="5" Value="{Binding ScaleX}" SmallChange="0.1"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBox Text="{Binding ScaleY, StringFormat=N2}" Margin="0,0,0,4" Background="{StaticResource Brush.Bg.Input}" BorderThickness="0" TextAlignment="Center"/>
                                <Slider Minimum="0.1" Maximum="5" Value="{Binding ScaleY}" SmallChange="0.1"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Rotation" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="-180" Maximum="180" Value="{Binding Rotation}" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding Rotation, StringFormat=N0}" Margin="10,0,0,0" TextAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="Position (X, Y)" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="-100" Maximum="100" Value="{Binding TranslateX}"/>
                            <Slider Grid.Column="2" Minimum="-100" Maximum="100" Value="{Binding TranslateY}"/>
                        </Grid>

                        <Separator Background="{StaticResource Brush.Border}" Margin="0,20"/>

                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="OUTPUT" Style="{StaticResource HeaderStyle}" Margin="0" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <RadioButton Content="XAML" Style="{StaticResource SegmentRadioLeft}" 
                                             IsChecked="{Binding IsXamlVisible, Mode=TwoWay}"
                                             Command="{Binding ShowXamlCommand}"/>
                                <RadioButton Content="HTML" Style="{StaticResource SegmentRadioRight}" 
                                             IsChecked="{Binding IsXamlVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=OneWay}"
                                             Command="{Binding ShowHtmlCommand}"/>
                            </StackPanel>
                        </Grid>

                        <Grid Height="120">
                            <TextBox Text="{Binding XamlOutput}" IsReadOnly="True" 
                                     Visibility="{Binding IsXamlVisible, Converter={StaticResource BoolToVis}}"
                                     FontFamily="Consolas" FontSize="11" TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto" 
                                     Background="{StaticResource Brush.Bg.Deep}" 
                                     Foreground="#9CDCFE"
                                     BorderBrush="{StaticResource Brush.Border}" Padding="10"/>

                            <TextBox Text="{Binding HtmlOutput}" IsReadOnly="True" 
                                     Visibility="{Binding IsXamlVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                     FontFamily="Consolas" FontSize="11" TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto" 
                                     Background="{StaticResource Brush.Bg.Deep}" 
                                     Foreground="#CE9178"
                                     BorderBrush="{StaticResource Brush.Border}" Padding="10"/>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,1,0,0" Padding="20" Background="{StaticResource Brush.Bg.Deep}" CornerRadius="0,0,10,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Load SVG..." Command="{Binding LoadSvgFileCommand}" Style="{StaticResource Style.Button.Primary}"/>
                        <Button Grid.Column="2" Content="Export PNG" Command="{Binding ExportToPngCommand}" Style="{StaticResource Style.Button.Accent}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="2" 
                Background="{StaticResource Brush.Bg.Panel}" 
                CornerRadius="10" 
                BorderBrush="{StaticResource Brush.Border}" 
                BorderThickness="1"
                ClipToBounds="True">
            <Grid x:Name="ZoomArea"
                  Background="Transparent"
                  MouseWheel="OnMouseWheel"
                  MouseLeftButtonDown="OnMouseLeftButtonDown"
                  MouseLeftButtonUp="OnMouseLeftButtonUp"
                  MouseMove="OnMouseMove"
                  MouseRightButtonDown="OnMouseRightButtonDown">

                <Grid.Resources>
                    <DrawingBrush x:Key="Checkerboard" TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="#1F2937">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,20,20" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Brush="#111827">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,10,10" />
                                            <RectangleGeometry Rect="10,10,10,10" />
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Resources>

                <Grid Background="{StaticResource Checkerboard}"/>

                <Grid x:Name="ViewContent" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="ViewScaleTransform"/>
                            <TranslateTransform x:Name="ViewTranslateTransform"/>
                        </TransformGroup>
                    </Grid.RenderTransform>

                    <Viewbox Margin="60" IsHitTestVisible="False">
                        <Grid>
                            <Path Data="{Binding GeometryPreview}" 
                                  Visibility="{Binding IsFullSvgMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                  Fill="{Binding FillColor}" 
                                  Stroke="{Binding StrokeColor}"
                                  StrokeThickness="{Binding StrokeThickness}"
                                  Stretch="Uniform"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="{Binding ScaleX}" ScaleY="{Binding ScaleY}"/>
                                        <RotateTransform Angle="{Binding Rotation}"/>
                                        <TranslateTransform X="{Binding TranslateX}" Y="{Binding TranslateY}"/>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>

                            <Image Source="{Binding FullSvgPreview}"
                                   Visibility="{Binding IsFullSvgMode, Converter={StaticResource BoolToVis}}"
                                   Stretch="Uniform"
                                   RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="{Binding ScaleX}" ScaleY="{Binding ScaleY}"/>
                                        <RotateTransform Angle="{Binding Rotation}"/>
                                        <TranslateTransform X="{Binding TranslateX}" Y="{Binding TranslateY}"/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </Grid>
                    </Viewbox>
                </Grid>

                <Border VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" 
                        Background="{StaticResource Brush.Bg.Deep}" CornerRadius="6" 
                        BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Padding="10,5"
                        IsHitTestVisible="False">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource Brush.Accent.Green}" Margin="0,0,6,0"/>
                            <TextBlock Text="Live Preview" FontSize="11" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}"/>
                        </StackPanel>
                        <TextBlock Text="Scroll to Zoom • Drag to Pan • Right Click to Reset" 
                                   FontSize="10" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>